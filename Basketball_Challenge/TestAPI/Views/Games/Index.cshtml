@model IEnumerable<TestAPI.Models.Game>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GameTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GameVenue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourtFees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Player.PlayerFname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (Convert.ToDateTime(item.GameDate) > DateTime.Now)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GameTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GameVenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourtFees)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Player.PlayerFname)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.GameNo }) |
                    @Html.ActionLink("Details", "Details", new { id = item.GameNo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.GameNo })
                </td>
            </tr>
        }

    }

</table>
